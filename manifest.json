{
    "manifest_version": 3,
    "name": "Secure Password Generator",
    "version": "1.0",
    "description": "Generate strong, customizable passwords with a single click",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": ["clipboardWrite", "storage"],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
